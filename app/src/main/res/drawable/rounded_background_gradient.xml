<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Linear gradient background. Angle values must be multiples of 45.
         Here angle="270" means top->bottom (270Â°). -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#FF7A18"
        android:centerColor="#FF4E50"
        android:endColor="#AF002D" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional stroke -->
    <stroke
        android:width="0.5dp"
        android:color="#26000000" />
</shape>
