                    android:textStyle="bold" />

                <!-- Developer Name (will load from Firebase) -->
                <TextView
                    android:id="@+id/tvDeveloperName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:text="Rohit Choudhary"
                    android:textColor="@color/primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Developer Title (will load from Firebase) -->
                <TextView
                    android:id="@+id/tvDeveloperTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:alpha="0.7"
                    android:fontFamily="sans-serif"
                    android:text="Full Stack Developer"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/primary" />

                <!-- Developer Tagline (will load from Firebase) -->
                <TextView
                    android:id="@+id/tvDeveloperTagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Empowering students to achieve their dreams"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <!-- View Profile Button - NEW! -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewDeveloperProfile"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="View Profile"
                    android:textColor="@color/white"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_myplaces"
