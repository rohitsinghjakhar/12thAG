<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/quizIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_quizzes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/primary" />

        <TextView
            android:id="@+id/quizTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Chapter 1 Quiz"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/quizIcon"
            app:layout_constraintTop_toTopOf="@id/quizIcon" />

        <TextView
            android:id="@+id/quizDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            tools:text="Test your knowledge"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/quizIcon"
            app:layout_constraintTop_toBottomOf="@id/quizTitle" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/quizIcon"
            app:layout_constraintTop_toBottomOf="@id/quizDescription">

            <TextView
                android:id="@+id/quizQuestionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_quizzes"
                app:drawableTint="@color/text_secondary"
                tools:text="20 Questions" />

            <TextView
                android:id="@+id/quizTimeLimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawablePadding="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_timer"
                app:drawableTint="@color/text_secondary"
                tools:text="30 minutes" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
