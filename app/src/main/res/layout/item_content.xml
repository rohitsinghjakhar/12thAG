<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/contentThumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@color/primary_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@drawable/ic_notes_placeholder" />

        <ImageView
            android:id="@+id/contentTypeIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="4dp"
            android:background="@drawable/circular_background"
            android:padding="4dp"
            app:layout_constraintStart_toStartOf="@id/contentThumbnail"
            app:layout_constraintTop_toTopOf="@id/contentThumbnail"
            app:tint="@color/white"
            tools:src="@drawable/ic_notes" />

        <TextView
            android:id="@+id/contentTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Introduction to Mathematics"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/contentThumbnail"
            app:layout_constraintTop_toTopOf="@id/contentThumbnail" />

        <TextView
            android:id="@+id/contentDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            tools:text="Learn the basics of mathematics and number systems"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/contentThumbnail"
            app:layout_constraintTop_toBottomOf="@id/contentTitle" />

        <TextView
            android:id="@+id/contentInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_hint"
            android:textSize="11sp"
            android:visibility="gone"
            tools:text="10:45 â€¢ 125 MB"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/contentThumbnail"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/contentThumbnail"
            app:layout_constraintTop_toBottomOf="@id/contentDescription" />

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>