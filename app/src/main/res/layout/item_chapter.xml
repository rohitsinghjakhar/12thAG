<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.roni.class12thagjetnotes.students.views.GradientView
            android:id="@+id/chapterGradientBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gradient_class_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/chapterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="Chapter 1"
            app:layout_constraintTop_toTopOf="@id/chapterGradientBackground"
            app:layout_constraintBottom_toBottomOf="@id/chapterGradientBackground"
            app:layout_constraintStart_toStartOf="@id/chapterGradientBackground"
            app:layout_constraintEnd_toEndOf="@id/chapterGradientBackground" />

        <TextView
            android:id="@+id/chapterName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Introduction to Mathematics"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/chapterGradientBackground"
            app:layout_constraintTop_toTopOf="@id/chapterGradientBackground" />

        <TextView
            android:id="@+id/chapterDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            tools:text="Learn the basics of mathematics"
            app:layout_constraintBottom_toBottomOf="@id/chapterGradientBackground"
            app:layout_constraintEnd_toStartOf="@id/iconArrow"
            app:layout_constraintStart_toEndOf="@id/chapterGradientBackground"
            app:layout_constraintTop_toBottomOf="@id/chapterName" />

        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_secondary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>